# Lakehouse Environment Variables
# Single source of truth for all infrastructure and application secrets
# Copy this file to .env and update values for your environment

# ============ INFRASTRUCTURE CONFIGURATION ============
# Used by docker-compose.yml for service configuration

# PostgreSQL Configuration (Infrastructure + Application)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=metastore
POSTGRES_USER=hive
POSTGRES_PASSWORD=your_postgres_password_here

# MinIO Configuration (Infrastructure + Application)  
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
# Application-specific MinIO settings
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=your_minio_secret_key_here
MINIO_BUCKET=warehouse
MINIO_SECURE=false

# Trino Configuration
TRINO_HOST=localhost
TRINO_PORT=8080
TRINO_CATALOG=iceberg
TRINO_SCHEMA=default
TRINO_USER=

# Hive Metastore Configuration
HIVE_METASTORE_PORT=9083

# CloudBeaver Configuration
CB_SERVER_NAME=Lakehouse CloudBeaver
CB_SERVER_URL=http://localhost:8978
CB_ADMIN_NAME=admin
CB_ADMIN_PASSWORD=your_cloudbeaver_password_here
CLOUDBEAVER_PORT=8978

# ============ APPLICATION CONFIGURATION ============
# Used by Python scripts in data-scripts/

# Application Settings
APP_NAME=Data Lakehouse Pipeline
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Redis Settings (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Feature Flags
SEND_EMAIL_ALERTS=false
ENABLE_DATA_VALIDATION=true
DRY_RUN_MODE=false
AUTO_CREATE_TABLES=true

# Processing Settings
BATCH_SIZE=1000
MAX_RETRIES=3
TIMEOUT_SECONDS=300
PARALLEL_WORKERS=4

# Email Settings (optional)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email_username_here
EMAIL_PASSWORD=your_email_password_here
EMAIL_FROM=noreply@company.com
EMAIL_RECIPIENTS=admin@company.com,data-team@company.com